@{
    var user = ViewBag.User as User;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatOnWebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/loader.css" asp-append-version="true" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Styles",required:false)
</head>

<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">            
                    <div class="col-auto col-xl-2 px-sm-2 px-0 bg-dark">
                        <div class="d-flex flex-column align-items-center align-items-sm-start px-2 pt-2 text-white min-vh-100">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center pb-3 pt-3 mb-md-0 me-md-auto text-white text-decoration-none">
                                <img src="~/img/4.png" width="50" height="50" viewBox="0 0 50 50" />
                                <span class="fs-5 d-none d-sm-inline ms-3">ChatOn</span>
                            </a>
                            <br />                            
                        @{
                            if (user is not null)
                            {
                            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0">
                                        <i class="fs-4 bi-house">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                                                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                                            </svg>
                                        </i> <span class="ms-1 d-none d-sm-inline">ANASAYFA</span>
                                    </a>
                                </li>
                                <br />
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Message" class="nav-link px-0 align-middle">
                                        <i class="fs-4 bi-cloud">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cloud" viewBox="0 0 16 16">
                                                <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                            </svg>
                                        </i> <span class="ms-1 d-none d-sm-inline">MESAJLAR</span>
                                    </a>
                                </li>
                                <br />
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Message" class="nav-link px-0 align-middle">
                                        <i class="fs-4 bi-person">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                            </svg>
                                        </i> <span class="ms-1 d-none d-sm-inline">ARKADAŞLAR</span>
                                    </a>

                                </li>
                                <br />
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="FriendShip" class="nav-link px-0 align-middle">
                                        <i class="fs-4 bi-people">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                                                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z" />
                                            </svg>
                                        </i> <span class="ms-1 d-none d-sm-inline">ARKADAŞ EKLEME</span>
                                    </a>

                                </li>
                                <br />
                                <li class="dropdown pb-2">
                                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
                                        <img src="@user.ImageUrl" alt="hugenerd" width="45" height="45" class="rounded-circle">
                                        <span class="d-none d-sm-inline mx-2">@user.FirstName @user.LastName </span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                                        <li><a class="dropdown-item" href="/@user.UserName">Profile</a></li>
                                        <li><a class="dropdown-item" href="/Home/EditProfile">Ayarlar</a></li>
                                        <li> <hr class="dropdown-divider"></li>
                                        <li> <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut">Çıkış Yap</a></li>
                                    </ul>
                                </li>
                                 </ul>
                            }
                        }
                        
                           
                     </div>
                    </div>           
            <div class="col py-3">
                <main role="main" class="pb-3">
                    <div class="content" id="loader">
                        <div class="loading">
                            <p>loading</p>
                            <span></span>
                        </div>
                    </div>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script>
        window.addEventListener("load", () => {
            var loader = document.getElementById("loader");
            loader.style.display = "none";
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>