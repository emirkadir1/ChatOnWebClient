@section Styles{
    <style>

        .my-custom-scrollbar {
            position: relative;
            height: 600px;
            overflow: auto;
        }

        .table-wrapper-scroll-y {
            display: block;
        }
    </style>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<link rel="stylesheet" href="~/css/friendship.css" />
<div class="container mt-3 mb-4">
    <div class="row">
        <div class="col-md-12">

            <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">

                <div style="width:300px; float:left; margin-top:200px;">
                    <h2 style="color:blue;">Friend Add</h2>
                    <input type="text" class="form-control mt-3" style="width:200px;" placeholder="Search..." id="searchInput">
                    <button type="button" class="btn btn-primary mt-1 btn-sm" style="width:200px;">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <div class="table-wrapper-scroll-y my-custom-scrollbar">

                    <table class="table table-bordered table-striped mb-0">
                        <thead>
                            <tr>
                                <th> Name</th>
                                <th class="action text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody id="Users">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section scripts {
    <script>
        var joinedUser = '@ViewBag.UserName';

    </script>
    <script src="~/js/friend.js"></script>
}