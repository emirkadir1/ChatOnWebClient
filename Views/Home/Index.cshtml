<link href="~/css/login-register.css" rel="stylesheet" />
        <div class="login-reg-panel">
            <div class="login-info-box">
                <h2>Hesabınızla Giriş Yapın</h2>
                <p>Mesajlarınız Sizi Bekliyor...</p>
                <label id="label-register" for="log-reg-show">Giriş Yap</label>
                <input type="radio" name="active-log-panel" id="log-reg-show" checked="checked">
            </div>

            <div class="register-info-box">
                <h2>Hesabınız Yok Mu?</h2>
                <p>Mesajlaşmak İçin Hemen Kayıt Olun!</p>
                <label id="label-login" for="log-login-show">Kayıt Ol</label>
                <input type="radio" name="active-log-panel" id="log-login-show">
            </div>

            <div class="white-panel">
                <div class="login-show">
                    <h2>LOGIN</h2>
                    <form asp-controller="Home" method="post" asp-action="Login">

                            <input type="text"  placeholder="UserName" name="userName" asp-for="UserName">

                            <input type="text"  placeholder="Password" name="Password" asp-for="Password">

                            <button class="btn btn-dark btn-block" id="LogIn">Login</button>

                    </form>
                    <a href="">Forgot password?</a>
                </div>
                <div class="register-show">
                    <h2>REGISTER</h2>
                    <form asp-controller="Home" method="post" asp-action="Register">
                            <input type="text" placeholder="Username" id="userName" asp-for="UserName">

                            <input type="text" placeholder="Email" id="userEmail" asp-for="Email">

                            <input type="text" placeholder="Password" id="userPassword" asp-for="Password">

                            <input type="text" placeholder="Confirm Password" id="confirmUserPassword" asp-for="ConfirmPassword">

                            <button class="btn btn-dark btn-block" id="SignUp">Signup</button>
           
                    </form>
                </div>
            </div>
        </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
